<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=1024, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="assets/images/binance-coin-cryptocurrency.svg">
  <title><%= htmlWebpackPlugin.options.title %></title>
  <% for (var css in htmlWebpackPlugin.files.css) { %>
  <link rel="stylesheet" href="<%= htmlWebpackPlugin.files.css[css] %>">
  <% } %>
</head>
<body>
    <main class="main">
      <div class="wrapper">
        <!-- header START -->
        <header class="header">
          <h1>CryptoApp</h1>
        </header>
        <!-- header END -->

        <hr>

        <!-- cards list START -->
        <ul class="cards">
          <!-- Крипта в долар -->
          <li class="cards__item">
            <div class="title">Крипта в долар:</div>
            <form id="crypto-to-form" class="info-block">
              <div class="info-block__item">
                <label>
                  <span>Crypto</span>
                  <input class="form__input" type="number" name="sum" placeholder="coins">
                </label>

                <span>*</span>

                <label>
                  <span>Crypto Price</span>
                  <input class="form__input" type="number" name="rate" placeholder="price">
                </label>
              </div>

              <span>=</span>
              <span class="form-summa" id="oneFormSumma">$ 0.00000</span>
            </form>
          </li>

          <!-- Долар в крипту -->
          <li class="cards__item">
            <div class="title">Долар в крипту:</div>
            <form id="usd-to-form" class="info-block">
              <div class="info-block__item">
                <label>
                  <span>USD</span>
                  <input class="form__input" type="number" name="sum" placeholder="$">
                </label>

                <span>/</span>

                <label>
                  <span>Crypto Price</span>
                  <input class="form__input" type="number" name="rate" placeholder="price">
                </label>
              </div>

              <span>=</span>
              <span class="form-summa">
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" width="20"
                          height="20" viewBox="0 0 256 256" xml:space="preserve">
  
                        <defs>
                          </defs>
                            <g style="stroke: none; stroke-width: 0; stroke-dasharray: none; stroke-linecap: butt; stroke-linejoin: miter; stroke-miterlimit: 10; fill: none; fill-rule: nonzero; opacity: 1;"
                              transform="translate(1.4065934065934016 1.4065934065934016) scale(2.81 2.81)">
                              <path d="M 45 90 C 20.187 90 0 69.813 0 45 S 20.187 0 45 0 c 24.813 0 45 20.187 45 45 S 69.813 90 45 90 z"
                                style="stroke: none; stroke-width: 1; stroke-dasharray: none; stroke-linecap: butt; stroke-linejoin: miter; stroke-miterlimit: 10; fill: rgb(228,173,74); fill-rule: nonzero; opacity: 1;"
                                transform=" matrix(1 0 0 1 0 0) " stroke-linecap="round" />
